@inject AuthenticationStateProvider _auth
@inject NavigationManager nav

<nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark border-bottom">
    <div class="container-fluid flex-wrap">
        <a class="navbar-brand" href="">سامانه ثبت PM مراکز مخابراتی</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-md-inline-flex">
            <ul class="navbar-nav mr-5 w-100 flex-wrap">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> خانه
                    </NavLink>
                </li>
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="counter">
                        <span class="oi oi-plus" aria-hidden="true"></span> Counter
                    </NavLink>
                </li>
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="fetchdata">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                    </NavLink>
                </li>
                <li class="nav-item px-2">
                    <AuthorizeView>
                        <Authorized>
                            <NavLink class="nav-link" href="login" @onclick="Logout">خروج</NavLink>
                        </Authorized>
                        <NotAuthorized>
                            <NavLink class="nav-link" href="login">ورود</NavLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private async Task Logout()
    {
        var auth = (AuthStateProvider)_auth;
        await auth.Logout();
        nav.NavigateTo("login");
    }
}
