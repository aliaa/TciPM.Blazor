@inherits LayoutComponentBase
@inject AuthenticationStateProvider _auth
@inject NavigationManager nav

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                <button class="ml-md-auto btn btn-link" @onclick="Logout">خروج از حساب کاربری</button>
            </Authorized>
            <NotAuthorized>
                <a href="login" class="ml-md-auto">ورود</a>
            </NotAuthorized>
        </AuthorizeView>

    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {
    private async Task Logout()
    {
        var auth = (AuthStateProvider)_auth;
        await auth.Logout();
        nav.NavigateTo("/");
    }
}